IROper expression()  :
{ IROper op1, op2; IROperKind op; }
{
/**  relation() (
 *   ( <AND> relation() )* |
 *    ( <OR> relation() )*  |
 *    ( <XOR> relation() )* |
 *    [ <NAND> relation() ] |
 *    [ <NOR> relation() ]  |
 *    ( <XNOR> relation() )*
 *  )
 */
  op1 = relation() 
  ( LOOKAHEAD(1) op=logical_operator() op2 = relation()
  	{ op1 = new IRLogicalOper(op1, op, op2); } 
  )*

  { return op1; }
}



